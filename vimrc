set nocompatible
filetype plugin indent on
syntax enable
set hidden

"python
set tabstop=4   
set shiftwidth=4
set expandtab
set softtabstop=4
set autoindent
set copyindent

"search
set showmatch
set hlsearch
set incsearch
set ignorecase
set smartcase

set number
set cursorline
set backspace=indent,eol,start "allow backspacing over everything in insert mode
set nowrap
    
"vim stahp
set nobackup 
set noswapfile

"ctrl-p
set runtimepath^=~/.vim/bundle/ctrlp.vim
